<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".AddTypeActivity">
    <android.support.v7.widget.Toolbar
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Thêm thể loại"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_marginLeft="250dp"
                android:src="@drawable/show"
                android:layout_width="25dp"
                android:layout_height="25dp" />
        </LinearLayout>


    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="255dp"
            android:layout_height="96dp"
            android:layout_gravity="center"
            android:src="@drawable/logoo" />

        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edtMatheloai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mã thể loại"
                android:maxLines="1"
                android:singleLine="true" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edtTentheloai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tên thể loại"
                android:maxLines="1"
                android:singleLine="true" />

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edtVitri"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Vị trí"
                android:maxLines="1"
                android:singleLine="true" />

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:paddingBottom="20dp"
                android:id="@+id/edtMota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mô tả"
                android:maxLines="1"
                android:singleLine="true" />

        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnThemtheloai"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="#ffffffff"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:text="Thêm"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="65dp" />
            <Button
                android:id="@+id/btnHuy"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="#ffffffff"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:text="Hủy"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="65dp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>